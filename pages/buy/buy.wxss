/* pages/buy/buy.wxss */
@import '/assests/fonts/iconfont.wxss';

.header {
  display: flex;
  padding: 20rpx;
  align-items: center;
  justify-content: space-between;
}

.address {
  display: flex;
  align-items: center;
}

.switch {
  overflow: hidden;
  border: 1px solid #78aaca;
  border-radius: 45rpx;
  display: flex;
  font-size: 26rpx;
  padding: 5rpx;
  width: 220rpx;
  align-items: center;
  justify-content: space-between;
}

.switch view {
  flex: 1;
  text-align: center;
  color: #78aaca;
}

.switch view.active {
  background: #7ba9cd;
  color: #fff;
  min-width: 110rpx;
  height: 70rpx;
  border-radius: 35rpx;
  line-height: 70rpx;
}

.container {
  display: flex;
  font-size: 28rpx;
  height: calc(100vh- 780px);
}

.container .left {
  width: 220rpx;
  background: #f6f6f6;
}

.container .left .item {
  padding: 35rpx 30rpx;
  border-left: solid 10rpx transparent;
  text-align: center;
  position: relative;
  color: gray;
}

.container .left view.tip {
  font-size: 20rpx;
  position: absolute;
  right: 0px;
  background: orangered;
  color: #fff;
  top: 0px;
  height: auto;
  padding: 2rpx 5rpx;
}

.container .left view.active {
  border-left: solid 10rpx #7ba9cd;
  background: #fff;
  color: #7ba9cd;
}

.container .right {
  padding-left: 20rpx;
  flex: 1;
}

.modal {
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, 0.6);
  position: fixed;
  z-index: 999;
  left: 0;
  top: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-content {
  width: 80%;
  height: 80%;
  position: relative;
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
}

.close-icon {
  position: absolute;
  right: 10rpx;
  top: 10rpx;
}

.img {
  height: 300rpx;
  width: 100%;
}

.modal-content .title {
  position: absolute;
  top: 200rpx;
  left: 40rpx;
  font-size: 40rpx;
  color: #fff;
}

.P2 {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
}

.counter {
  align-items: center;
  display: flex;
}

.counter view {
  width: 50rpx;
  height: 50rpx;
  text-align: center;
  color: #78aaca;
  font-size: bold;
}

.counter .btn {
  border-radius: 50%;
  border:1px solid #78aaca;
}

.counter .jian {
  border-color:  #78aaca;
}

.counter .jia {
  background: #78aaca;
  color: #fff;
}

.j-between{
  justify-content: space-between;

}

.btns{
  padding:10rpx 20rpx;
}

.btns view{
  min-width: 45%;
  font-size: 30rpx;
  padding:15rpx 0;
  background: #78aaca;
  text-align: center;
  color:#fff;
  border-radius:10rpx; 

}

.btns .btnborder{
  border: 1px solid burlywood;
  background: #fff;
  color: burlywood;
}